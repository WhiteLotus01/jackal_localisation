<?xml version="1.0"?>

<launch>
  <!--PARAMETERS-->
  <param name="ini_filename" value="$(find mrpt_icp_slam_2d)/tutorial/icp_slam_demo.ini"/>
  <param name="odom_frame_id" value="odom"/>
  <param name="global_frame_id" value="map"/>
  <param name="base_frame_id" value="base_link"/>
  <param name="sensor_source" value="/obstacle_scan"/>
  <param name="trajectory_update_rate" value="10"/>
  <param name="trajectory_publish_rate" value="5"/>

  <!--SLAM RUN-->
  <node pkg="mrpt_icp_slam_2d" type="mrpt_icp_slam_2d" name="icp_slam" output="screen"></node>

  <!-- <node pkg="rviz" type="rviz" name="rviz_icp" output="screen" args="-d $(find mrpt_icp_slam_2d)/rviz/rviz_conf.rviz"></node> -->

</launch>

